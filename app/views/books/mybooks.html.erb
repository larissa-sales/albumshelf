<div class = "form">
  <p id="notice"><%= notice %></p>

  <h1>My Books</h1>

  <table class="table table-hover">
    <thead style="background-color: white; color:#1d5a67">
      <tr>
        <th>Cover</th>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <% if current_user == book.user%>
          <tr>
            <td><%= image_tag book.cover.url(:thumb) %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.genre %></td>
            <td><%= book.year %></td>
            <td><%= link_to 'Details', book, class: "btn btn-info", style: "color: white" %></td>
            <td><%= link_to 'Add Albums', books_addalbums_path(book), class: "btn btn-info", style: "color: white" %></td>
          </tr>
          <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path, class: "btn btn-info", style: "color: white" %>
</div>
