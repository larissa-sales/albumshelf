<div class = "form">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= @book.author %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= @book.genre %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= @book.year %>
  </p>

  <p>
    <strong>Cover:</strong>
    <%= image_tag @book.cover.url(:medium) %>
  </p>

  <%if current_user == @book.user%>
    <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-info", style: "color: white" %>
    <%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info", style: "color: white" %>
  <% end %>
  <%= link_to 'Back', books_path, class: "btn btn-info", style: "color: white" %>
  <%= link_to 'Related Albums', books_albumsrelated_path , class: "btn btn-info", style: "color: white" %>

</div>
