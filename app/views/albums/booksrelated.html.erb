<div class = "form">
  <p id="notice"><%= notice %></p>

  <h1>Books related to</h1>

  <p style="font-family:monospace; color:Black; font-size: 35px;">
    <%= @album.title %>
  </p>

  <p style="text-align:center;">
    <%= image_tag @album.cover.url(:medium) %>
  </p>

  <table class="table table-hover">
    <thead style="background-color: white; color:#1d5a67">
      <tr>
        <th>Cover</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @album.books.each do |book| %>
        <tr>
          <td><%= image_tag book.cover.url(:thumb) %></td>
          <td><%= book.title %></td>
          <td><%= link_to 'Details', book, class: "btn btn-info", style: "color: white" %></td>
          <%if current_user == @album.user%>
            <td><%= link_to 'Delete', albums_deletebook_path(bookid: book.id) , data: { confirm: 'Are you sure?' }, class: "btn btn-info", style: "color: white" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Back', albums_path, class: "btn btn-info", style: "color: white" %>
</div>
